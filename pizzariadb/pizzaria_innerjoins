# VER OS DETALHES DE UM PEDIDO ESPEC√çFICO
# Pedido.id, pizza.sabor, pedido_item.quantidade, pedido_item.valorUnitario

SELECT pedidos.id, pizzas.sabor, pedido_itens.quantidade, pedido_itens.valor_unitario FROM pedidos

INNER JOIN pedido_itens
ON pedido_itens.pedido_id = pedidos.id

INNER JOIN pizzas
ON pedido_itens.pizza_id = pizzas.id
